<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backimg"
    >

    <RelativeLayout
        android:id="@+id/rel_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/strip">

        <com.zoptal.bodynv.common.MyTextView
            android:text="Payment"
            android:textColor="#F1F1F1"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:background="@drawable/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_bck"
            />

    </RelativeLayout>

    <com.zoptal.bodynv.common.InteractiveScrollView
        android:layout_below="@+id/rel_head"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.zoptal.bodynv.common.MyTextViewbold
                            android:layout_weight="1"
                            android:text="First Name"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <com.zoptal.bodynv.common.MyTextViewbold
                            android:layout_weight="1"
                            android:text="Last Name"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:layout_marginLeft="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/filed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.zoptal.bodynv.common.EditTextView
                                android:id="@+id/ed_fname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:textColor="#ffffff"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="40dp"
                                android:textSize="16dp"
                                android:layout_centerVertical="true"
                                android:textCursorDrawable="@drawable/whitecursor"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/filed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.zoptal.bodynv.common.EditTextView
                                android:id="@+id/ed_lastname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:textColor="#ffffff"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"
                                android:layout_centerVertical="true"
                                android:textCursorDrawable="@drawable/whitecursor"
                                />
                        </RelativeLayout>
                    </LinearLayout>


                    <com.zoptal.bodynv.common.MyTextViewbold
                        android:layout_marginTop="20dp"
                        android:text="Address 1"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/filed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/ed_address1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#ffffff"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textCursorDrawable="@drawable/whitecursor"
                            />

                    </RelativeLayout>

                    <com.zoptal.bodynv.common.MyTextViewbold
                        android:text="Address2"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/filed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/ed_addresss2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#ffffff"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textCursorDrawable="@drawable/whitecursor"
                            />
                    </RelativeLayout>


                    <com.zoptal.bodynv.common.MyTextViewbold
                        android:text="Country"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/filed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.zoptal.bodynv.common.EditTextView
                            android:id="@+id/ed_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#ffffff"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textCursorDrawable="@drawable/whitecursor"
                            />
                    </RelativeLayout>

                    <com.zoptal.bodynv.common.MyTextViewbold
                        android:text="State"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/filed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.zoptal.bodynv.common.EditTextView
                            android:id="@+id/ed_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#ffffff"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textCursorDrawable="@drawable/whitecursor"
                            />
                    </RelativeLayout>

                    <com.zoptal.bodynv.common.MyTextViewbold
                        android:text="Phone Number"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/filed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.zoptal.bodynv.common.EditTextView
                            android:id="@+id/ed_phnno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#ffffff"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textCursorDrawable="@drawable/whitecursor"
                            />
                    </RelativeLayout>

                    <com.zoptal.bodynv.common.MyTextViewbold
                        android:text="Email"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/filed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.zoptal.bodynv.common.EditTextView
                            android:id="@+id/ed_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#ffffff"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textCursorDrawable="@drawable/whitecursor"
                            />
                    </RelativeLayout>

                    <com.zoptal.bodynv.common.MyTextViewbold
                        android:text="Confirm Email"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/filed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.zoptal.bodynv.common.EditTextView
                            android:id="@+id/ed_confirmemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#ffffff"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textCursorDrawable="@drawable/whitecursor"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.zoptal.bodynv.common.MyTextViewbold
                            android:layout_weight="1"
                            android:text="City"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <com.zoptal.bodynv.common.MyTextViewbold
                            android:layout_weight="1"
                            android:text="Zip code"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:layout_marginLeft="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/filed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.zoptal.bodynv.common.EditTextView
                                android:id="@+id/ed_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:textColor="#ffffff"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="40dp"
                                android:textSize="16dp"
                                android:layout_centerVertical="true"
                                android:textCursorDrawable="@drawable/whitecursor"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/filed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.zoptal.bodynv.common.EditTextView
                                android:id="@+id/ed_zipcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:textColor="#ffffff"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"
                                android:layout_centerVertical="true"
                                android:textCursorDrawable="@drawable/whitecursor"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <com.zoptal.bodynv.common.MyTextViewbold
                        android:text="Account Number"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/filed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.zoptal.bodynv.common.EditTextView
                            android:id="@+id/ed_accountnum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#ffffff"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textCursorDrawable="@drawable/whitecursor"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.zoptal.bodynv.common.MyTextViewbold
                            android:layout_weight="1"
                            android:text="Card Type"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <com.zoptal.bodynv.common.MyTextViewbold
                            android:layout_weight="1"
                            android:text="CVV Number"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:layout_marginLeft="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/filed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.zoptal.bodynv.common.EditTextView
                                android:id="@+id/ed_cardtype"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:textColor="#ffffff"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="40dp"
                                android:textSize="16dp"
                                android:layout_centerVertical="true"
                                android:textCursorDrawable="@drawable/whitecursor"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/filed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.zoptal.bodynv.common.EditTextView
                                android:id="@+id/ed_cvvnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:textColor="#ffffff"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"
                                android:layout_centerVertical="true"
                                android:textCursorDrawable="@drawable/whitecursor"
                                />
                        </RelativeLayout>
</LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.zoptal.bodynv.common.MyTextViewbold
                                android:layout_weight="1"
                                android:text="Exp Month"
                                android:textColor="#ffffff"
                                android:textSize="17dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>



                            <com.zoptal.bodynv.common.MyTextViewbold
                                android:layout_weight="1"
                                android:text="Exp Year"
                                android:textColor="#ffffff"
                                android:textSize="17dp"
                                android:layout_marginLeft="30dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout

                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:background="@mipmap/filed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.zoptal.bodynv.common.EditTextView
                                    android:id="@+id/ed_mnth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:textColor="#ffffff"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="40dp"
                                    android:textSize="16dp"
                                    android:layout_centerVertical="true"
                                    android:textCursorDrawable="@drawable/whitecursor"
                                    />

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Exp.[MM]"
                                    android:drawSelectorOnTop="false"
                                    android:id="@+id/list_mnth"
                                    android:textSize="18dp"
                                    android:layout_weight="1"
                                    android:textColor="#ffffff"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:textColorHint="#ffffff"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:imeOptions="actionDone"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:background="@mipmap/filed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.zoptal.bodynv.common.EditTextView
                                    android:id="@+id/ed_year"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:textColor="#ffffff"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="10dp"
                                    android:textSize="16dp"
                                    android:layout_centerVertical="true"
                                    android:textCursorDrawable="@drawable/whitecursor"
                                    />
                            </RelativeLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_pay"
                            android:layout_width="90dp"
                            android:layout_height="35dp"
                            android:text="Pay"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="40dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#ffffff"
                            android:background="@mipmap/filed"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.zoptal.bodynv.common.InteractiveScrollView>
</RelativeLayout>

